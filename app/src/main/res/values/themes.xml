<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GetfixApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Font -->
        <item name="font">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>

        <!-- Status bar color. target api 23-->
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <item name="android:statusBarColor" tools:targetApi="M">@color/white</item>

    </style>

    <style name="TextDesc">
        <item name="font">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="TextSubHead">
        <item name="font">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonLogin" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:radius">10dp</item>
    </style>
</resources>