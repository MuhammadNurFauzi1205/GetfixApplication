<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/foto_profil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nama_teknisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/pembayaran_berhasil"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/foto_profil"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/tanggal_pembayaran_berhasil"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/foto_profil"
            app:layout_constraintTop_toBottomOf="@id/nama_teknisi" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>